<div class="ibox-content">
    <form role="form" class="form-inline">
        <div class="form-group">
            <label>规则名称:</label><input type="text" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label>状态</label>
            <select class="form-control" style="width:130px;height:33px" id="status">
               <option value="">请选择</option>
               <option value="1">启用</option>
               <option value="0">禁用</option>
            </select>
        </div>
        <button class="btn btn-white" type="button" onclick="searchList('1')"><i class="glyphicon glyphicon-search"></i>查询</button>
        <button class="btn btn-info" type="button" onclick="exportData()"><i class="glyphicon glyphicon-export"></i>导出</button>
        #if($permissionTool.hasPermission('advert.rule.add'))
        <button class="btn btn-success" type="button" onclick="edit()"><i class="glyphicon glyphicon-plus"></i>新建规则</button>
        #end
    </form>
  </div>
  <div class="jqGrid_wrapper ">
     <table id="table_list_1"></table>
     <div id="pager_list_1"></div>
  </div>
<script>
    function searchList(page){
         $("#table_list_1").jqGrid('setGridParam',{
              url:'listRulejson.html?'+getParams(),
              page:page
         }).trigger("reloadGrid");
    }
    function getParams(){
        var name=$("#name").val();
        var status=$("#status").val();
        return "name="+name+"&status="+status;
    }
   $(document).ready(function () {
       $.jgrid.defaults.styleUI = 'Bootstrap';
       $('#table_list_1').jqGrid({
              url:'listRulejson.html?'+getParams(),
              datatype: "json",
              height: jqGridHeight,
              autowidth: true,
              shrinkToFit: true,
              rowNum: 20,
              rowList: [20, 30, 50],
              viewrecords : true,
              colNames: ['规则名称','结算方式','结算指标','结算类型','结算值','结算周期','状态','创建时间','操作'],
              colModel: [
                 {
                    name: 'name',
                    width: 10
                 },
                 {
                    name: 'settleMethodName',
                    width: 10
                  },
                  {
                     name: 'settleTarget',
                     width: 10
                   },
                   {
                     name: 'settleTypeName',
                     width: 10
                   },
                   {
                    name: 'settleTypeNum',
                    width: 10
                  },
                   {
                      name: 'settleCycleName',
                      width: 10
                  },
                   {
                   name: 'statusName',
                   width: 10
                  },
                  {
                      name: 'createdAtStr',
                      width: 12
                  },
                  {
                      name : "comSetRuId",
                      width:10,
                      formatter : function(value, options, rowObject) {
                         var b = '';
                         #if($permissionTool.hasPermission('advert.rule.update'))
                          b = '<a href="javascript:void(0)" onclick="edit(\'' + value + '\')" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i>编辑</a>';
                          #end
                          return b;
                      }
                }
              ],
              pager: "#pager_list_1"
         });
   });
   function edit(comSetRuId){
      layer.open({
        type: 2,
        area: ['800px', '500px'],
        fixed: false,
        title: '编辑结算规则',
        maxmin: true,
        content: 'editSettleRule.html?comSetRuId='+comSetRuId
       });
    }
    function exportData(){
       window.location.href="export.html?"+getParams();
    }
</script>
</html>