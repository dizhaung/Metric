<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox-content">
                <form id="form1" class="form-horizontal" method="post" action="update.html">
                    <input type="hidden" name="roleId" value="$!data.roleId"/>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">角色名称：</label>

                        <div class="col-sm-8">
                            <input type="text" name="roleName" required value="$!data.roleName" placeholder="角色名称"
                                   class="form-control">
                        </div>
                    </div>
                    <!--
                    <div class="form-group">
                        <label class="col-sm-3 control-label">DomainID：</label>
