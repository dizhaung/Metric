    <import resource="velocity.xml"/>
    <import resource="classpath:metric-core.xml"/>
    <import resource="classpath:metric-dal.xml"/>
    <import resource="classpath:metric-service.xml"/>
    <import resource="dubbo.xml"/>

    <aop:aspectj-autoproxy proxy-target-class="true" />

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize"><value>15728640</value></property>
        <property name="defaultEncoding"><value>UTF-8</value></property>
    </bean>

    <!-- 初始缓存数据，初始化spring中定义的bean的前后都会用此实现类 -->
    <bean id="rateLimitInitListener" class="org.loxf.metric.utils.RateLimitInitListener"/>

    <context:component-scan base-package="org.loxf.metric.test"/>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/user/*"/> <!-- 拦截范围 -->
            <mvc:exclude-mapping path="/user/register"/> <!--不被拦截范围（路径）-->
            <mvc:exclude-mapping path="/user/login"/>
            <bean class="org.loxf.metric.interceptor.PermissionInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>
</beans>